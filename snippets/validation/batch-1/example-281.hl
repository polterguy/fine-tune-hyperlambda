/*
 * Resize the image "/media/splash.png" to width 640 and height 360 pixels.
 * Save the output to "/media/splash-640x360.webp" as a WebP image.
 *
 * Notice, this might skew the image
 */
image.resize:/media/splash.png
   width:int:640
   height:int:360
   type:webp
   dest:/media/splash-640x360.webp
