/*
 * Crop 10 pixels from the left, 20 from the top, 10 from the right,
 * and 15 from the bottom of the image "/media/photo.png".
 * Save the result to "/media/photo-cropped.png".
 */
image.crop:/media/photo.png
   left:int:10
   top:int:20
   right:int:10
   bottom:int:15
   dest:/media/photo-cropped.png
