// An HTTP PUT endpoint to update an existing contact's name and email address.

/*
 * Save as for instance: /modules/contacts/update.put.hl
 */

.arguments
   id:int
   name:string
   email:string

data.connect:[generic|crm]
   data.update
      table:contacts
      values
         name:x:@.arguments/*/name
         email:x:@.arguments/*/email
      where
         and
            id:x:@.arguments/*/id
   return-nodes:x:@data.update/*
