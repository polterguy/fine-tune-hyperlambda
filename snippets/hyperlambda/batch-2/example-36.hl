/*
 * Join words into a sentence using [strings.join] and log the message.
 */
.arguments
.sentence
.sentence.words
   .:Magic
   .:makes
   .:backend
   .:development
   .:easy
set-value:x:@.sentence
   strings.join:x:@.sentence.words/*
      .:" "
log.info:x:@.sentence
yield
   result_of_join:x:@.sentence