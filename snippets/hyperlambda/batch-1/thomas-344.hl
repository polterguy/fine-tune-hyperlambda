/*
 * Creates a user profile with settings, preferences, and roles.
 */
.user
   // Username of the user
   name:John Doe

   // User's email address
   email:john@example.com

   /*
    * Nested preferences
    * such as UI theme and notifications
    */
   preferences
      theme:dark
      notifications:bool:true

   // Assigned roles
   roles
      .:admin
      .:editor
