/*
 * Sends HTML invites to participants fetched from the [event_db] database.
 */
data.connect:event_db
   data.read
      table:participants
   for-each:x:@data.read/*
      mail.smtp.send
         message
            to
               .
                  email:x:@.dp/#/*/email
            subject:You're Invited!
            entity:text/html
               content:<h1>Join Us</h1><p>Weâ€™d love to see you at our event.</p>
