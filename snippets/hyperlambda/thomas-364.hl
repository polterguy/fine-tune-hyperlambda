/*
 * Sends customer satisfaction survey emails to recent buyers from the [sales] database.
 */
data.connect:sales
   data.read
      table:recent_customers
      columns
         email
   for-each:x:@data.read/*
      mail.smtp.send
         message
            to
               .
                  email:x:@.dp/#/*/email
            subject:We Value Your Feedback
            entity:text/plain
               content:Tell us about your recent experience â€” click the link to complete our survey.
