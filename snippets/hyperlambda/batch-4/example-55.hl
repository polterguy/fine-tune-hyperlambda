/*
 * Create an endpoint taking a name filter that's using SQL slots to return customers from my sales db
 */
.arguments
   name.like:string
data.connect:sales
   add:x:+/*/where/*/and
      get-nodes:x:@.arguments/*/name.like
   data.read
      table:customers
      where
         and
   yield
      customers:x:@data.read/*