/*
 * File upload endpoint that sends an email notification to the uploader after a file is uploaded.
 * The email address and user name are looked up from the "users" table based on user ID.
 */
.arguments
   user-id:int
   filename:string

data.connect:appdb
   data.read
      table:users
      columns
         name
         email
      where
         and
            id.eq:x:@.arguments/*/user-id

mail.smtp.send
   message
      to
         .
            name:x:@data.connect/*/data.read/*/name
            email:x:@data.connect/*/data.read/*/email
      subject:File Uploaded Successfully
      entity:text/plain
         content:File was successfully uploaded!
