/*
 * HTTP-accessible API endpoint for retrieving customer orders.
 * Filters by status only. No authentication or pagination required.
 */
.arguments
   Status.eq:string

data.connect:orders

   data.read
      table:Orders
      columns
         OrderId
         CustomerName
         Status
         OrderDate
      where
         and
            Status.eq:x:@.arguments/*/Status

   return-nodes:x:@data.read/*
