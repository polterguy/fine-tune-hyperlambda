
// Hyperlambda example where orders are counted in the 'ecommerce_db' database from the 'orders' table. Database type is Microsoft SQL Server

// Counts orders in the "ecommerce_db" database from the "orders" table.
data.connect:ecommerce_db
   database-type:mssql

   // Counting total orders.
   data.read
      database-type:mssql
      table:orders
      columns
         count(*)
            as:count
      limit:long:1
